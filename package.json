{
  "name": "critter",
  "version": "1.0.0",
  "description": "Enterprise grade unified automation framework supporting web, API and mobile testing via Playwright and WebDriverIO/Appium.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "node -e \"try{require('fs').rmSync('dist',{recursive:true,force:true})}catch(e){}; try{require('fs').rmSync('reports',{recursive:true,force:true})}catch(e){}\"",
    "build": "tsc -p .",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:strict": "eslint src tests --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier \"**/*.{ts,tsx,js,json,md,yml,yaml}\" --write",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:unit": "cross-env TEST_ENVIRONMENT=dev npx playwright test --grep @unit",
    "test:smoke": "playwright test --reporter=line --grep @smoke",
    "test:ui": "cross-env TEST_ENVIRONMENT=dev npx playwright test tests/ui/specs",
    "test:api": "cross-env TEST_ENVIRONMENT=dev npx playwright test tests/api/specs",
    "test": "npm run test:ui && npm run test:api",
    "allure:clean": "node -e \"try{require('fs').rmSync('reports/allure/allure-report',{recursive:true,force:true})}catch(e){}\"",
    "allure:gen": "allure generate reports/allure/allure-results --clean -o reports/allure/allure-report",
    "allure:open": "allure open reports/allure/allure-report",
    "test:allure": "cross-env TEST_ENVIRONMENT=dev npx playwright test && npm run allure:gen && npm run allure:open",
    "appium": "appium"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "dotenv": "^17.2.1",
    "pino": "^9.9.0"
  },
  "devDependencies": {
    "@appium/images-plugin": "^4.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "@wdio/globals": "^9.17.0",
    "@wdio/types": "^9.19.2",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "appium": "^3.0.2",
    "appium-espresso-driver": "^5.0.2",
    "appium-uiautomator2-driver": "^5.0.0",
    "appium-xcuitest-driver": "^10.0.6",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.2.2",
    "globals": "^16.3.0",
    "lefthook": "^1.12.3",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "webdriverio": "^9.19.2"
  }
}
