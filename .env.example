# Example environment variables for critter automation framework

# TEST_ENVIRONMENT determines which config file under src/framework/environments is loaded.
# Acceptable values: dev, staging, prod
TEST_ENVIRONMENT=dev

# Local development URLs
DEV_BASE_URL=http://localhost:3000
DEV_API_URL=http://localhost:3001

# Staging URLs and provider settings
STAGING_BASE_URL=https://staging.example.com
STAGING_API_URL=https://api.staging.example.com
STAGING_PROVIDER=browserstack
STAGING_CLOUD_USER=your_browserstack_user
STAGING_CLOUD_KEY=your_browserstack_key

# Production URLs and provider settings
PROD_BASE_URL=https://www.example.com
PROD_API_URL=https://api.example.com
PROD_PROVIDER=saucelabs
PROD_CLOUD_USER=your_sauce_username
PROD_CLOUD_KEY=your_sauce_access_key

# BrowserStack credentials for wdio
BROWSERSTACK_USER=
BROWSERSTACK_KEY=
BROWSERSTACK_LOCAL=false
BROWSERSTACK_REGION=us

# Sauce Labs credentials for wdio
SAUCE_USERNAME=
SAUCE_ACCESS_KEY=
SAUCE_REGION=us-west-1
SAUCE_CONNECT=false
SAUCE_TUNNEL_IDENTIFIER=

# Local device farm settings
LOCAL_WEBDRIVER_HOST=localhost
LOCAL_WEBDRIVER_PORT=4444
LOCAL_WEBDRIVER_PATH=/wd/hub
LOCAL_APPIUM_HOST=localhost
LOCAL_APPIUM_PORT=4723
LOCAL_APPIUM_PATH=/wd/hub